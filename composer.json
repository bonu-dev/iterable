{
    "name": "bonu/iterable",
    "description": "Handy utilities for iterables",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Bonu\\Iterable\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bonu\\Iterable\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Matus Koterba",
            "email": "matus@koterba.sk"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.0",
        "phpunit/phpunit": "^9.0"
    },
    "scripts": {
        "code:analyse": [
            "./vendor/bin/phpstan analyse --memory-limit=-1"
        ]
    }
}
